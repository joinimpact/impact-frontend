{
  "extends": [
    "tslint:latest",
    "tslint-react",
    "tslint-config-airbnb",
    "tslint-eslint-rules",
    "tslint-config-prettier"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules/**"
    ]
  },
  "rulesDirectory": "./node_modules/tslint-eslint-rules/dist/rules",
  "jsRules": {
    "indent": [ true, "spaces", 2],
    "class-name": true,
    "comment-format": [
      true,
      "check-space"
    ],
    "no-reference": false,
    "no-duplicate-variable": true,
    "no-eval": true,
    "no-trailing-whitespace": true,
    "no-unsafe-finally": true,
    "one-line": [
      true,
      "check-open-brace",
      "check-whitespace"
    ],
    "quotemark": [
      true,
      "single",
      "jsx-double"
    ],
    "semicolon": [
      true,
      "always"
    ],
    "triple-equals": [
      true,
      "allow-null-check"
    ],
    "variable-name": [
      true,
      "ban-keywords"
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-separator",
      "check-type"
    ]
  },
  "rules": {
    "no-reference": false,
    "no-unused-expression": false,
    "no-implicit-dependencies": false,
    "no-object-literal-type-assertion": false,
    "ordered-imports": false,
    "no-submodule-imports": false,
    "import-name": false,
    "max-line-length": [true, 120],
    "prefer-array-literal": false,
    "no-increment-decrement": false,
    "jsx-boolean-value": false,
    "no-var-requires": false,
    "no-console": false,
    "no-debugger": false,
    "jsx-no-multiline-js": false,
    "object-literal-sort-keys": false,
    "arrow-parens": false,
    "class-name": true,
    "comment-format": [
      true,
      "check-space"
    ],
    "indent": [
      true,
      "spaces"
    ],
    "ter-indent": [
      "error",
      2
    ],
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "no-eval": true,
    "no-internal-module": true,
    "no-trailing-whitespace": true,
    "no-unsafe-finally": true,
    "no-var-keyword": true,
    "one-line": [
      true,
      "check-open-brace",
      "check-whitespace"
    ],
    "quotemark": [
      true,
      "single",
      "jsx-double"
    ],
    "semicolon": [
      true,
      "always",
      "ignore-bound-class-methods"
    ],
    "triple-equals": [
      true,
      "allow-null-check"
    ],
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      }
    ],
    "variable-name": [
      true,
      "ban-keywords"
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-separator",
      "check-type"
    ],
    "trailing-comma": [
      true,
      {
        "esSpecCompliant": true
      }
    ]
  }
}
